        <NavigationPage BackgroundColor="#114477" Title="Champions">
            <NavigationPage.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="iOS" Value="https://cdn.leagueofgraphs.com/img/tft/items/11.png" />
